<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/message_list_item_bg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:gravity ="center_vertical"
    android:paddingLeft="3.0dip"
    android:paddingRight="0dip" 
    android:paddingTop="3dip"
    android:paddingBottom="3dip">

	<RelativeLayout 
		android:layout_width="53dip"
		android:layout_height="53dip">
    	<ImageView android:id="@+id/msg_head"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:scaleType="centerCrop"
        	android:adjustViewBounds = "true"
        	android:layout_margin="4.0dip"/> 
        <TextView
            android:id="@+id/msg_tip_count"
            style="@style/msg_tip_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/tip_count_bg"
            android:gravity="center"
            android:text="@null"
            android:visibility="invisible" />
     </RelativeLayout> 
     
	
    <RelativeLayout 
    android:layout_width="0dip"
	android:layout_height="wrap_content" 
	android:layout_weight="11.0"
	android:gravity="left" 
	android:paddingLeft="3.0dip" 
    >
    	<TextView android:id="@+id/msg_nickname"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	style="@style/msg_nickname"
    	android:ellipsize="end"
    	android:maxWidth="140.0dip"
    	android:singleLine="true"
    	android:gravity="center_vertical"
    	android:paddingTop="4.0dip"
    	android:paddingBottom="0.0dip"
    	/>
    	<TextView android:id="@+id/msg_lastmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/msg_lastmsg"
        android:ellipsize="end"
        android:layout_below="@id/msg_nickname"
        android:singleLine="true"
        android:gravity="center_vertical"
    	android:paddingTop="0.0dip"
    	android:paddingBottom="4.0dip"/>
    </RelativeLayout>
    
    <RelativeLayout android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingRight="3dip"
    android:layout_weight="5.0"
    >
        <TextView android:id="@+id/msg_updatetime"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	style="@style/msg_last_time"
    	android:gravity="right"
    	android:minWidth="100.0dip"
    	android:singleLine="true"
    	android:ellipsize="end"
    	android:paddingTop="2.0dip"
    	android:paddingBottom="2.0dip"
    	/>
		<RelativeLayout
		    android:layout_below="@id/msg_updatetime"
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="2.0dip"
    		android:paddingBottom="2.0dip"
    		android:paddingRight="6.0dip"
    		android:gravity="right">
	   		<ImageView android:id="@+id/msg_state"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content" />
	   	</RelativeLayout>	
    </RelativeLayout>

    <CheckBox
        android:id="@+id/message_list_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft= "8dp"
        android:layout_marginRight="0dp"
        android:paddingRight="0dp"
        android:button="@drawable/checkbox_bg"
        android:clickable="false"
        android:visibility="gone" />
    
</LinearLayout>