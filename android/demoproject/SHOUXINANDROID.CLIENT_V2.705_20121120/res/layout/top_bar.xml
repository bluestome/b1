<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/list_top_bar_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_top_bg" />

        <!-- 新建联系人 -->

        <ImageButton
            android:id="@+id/contacts_list_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/list_top_bar_bg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/top_bar_button_bg"
            android:src="@drawable/contacts_list_new_btn"
            android:visibility="gone" />

        <!-- 新建消息 -->

        <ImageButton
            android:id="@+id/message_list_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/list_top_bar_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/top_bar_button_bg"
            android:src="@drawable/message_list_new"
            android:visibility="gone" />

        <!-- 搜索联系人 -->

        <ImageButton
            android:id="@+id/contacts_list_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/list_top_bar_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/top_bar_button_bg"
            android:src="@drawable/contacts_list_search_btn"
            android:visibility="gone" />
        
		<!-- 搜索联系人键盘 -->

        <ImageButton
            android:id="@+id/contacts_search_inputType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/list_top_bar_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/top_bar_button_bg"
            android:src="@drawable/contacts_list_search_btn"
            android:visibility="gone" />
         <!-- 编辑联系人 -->

        <ImageButton
            android:id="@+id/contacts_detail_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/list_top_bar_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/top_bar_button_bg"
            android:src="@drawable/contacts_list_edit_btn"
            android:visibility="gone" />
        
        <!-- 标题 -->

        <TextView
            android:id="@+id/list_title"
            style="@style/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</merge>