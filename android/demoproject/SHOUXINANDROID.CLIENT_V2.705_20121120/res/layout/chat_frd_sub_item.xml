<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/chat_frd_content"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:background="@drawable/chatfrom_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/chat_frd_reason"
            style="@style/chat_text"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            android:id="@+id/chat_frd_separate"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="@color/chat_frd_separate"
            android:maxWidth="220.0dip" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <ImageView
                android:id="@+id/chat_frd_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/default_head" />

            <LinearLayout
                android:id="@+id/chat_frd_nickSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/chat_frd_header"
                android:layout_toRightOf="@id/chat_frd_header"
                android:orientation="horizontal" 
                android:layout_marginLeft="5dip">

                <TextView
                    android:id="@+id/chat_frd_nickname"
                    style="@style/chat_text"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxWidth="120.0dip"
                    />

                <ImageView
                    android:id="@+id/chat_frd_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/female" />
            </LinearLayout>

            <TextView
                android:id="@+id/chat_frd_signature"
                style="@style/chat_frd_text"
                android:layout_alignLeft="@id/chat_frd_nickSex"
                android:layout_below="@id/chat_frd_nickSex"
                android:ellipsize="end"
                android:maxLines="2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/chat_frd_signature"
                android:layout_marginTop="5dip"
                android:src="@drawable/card_title_more" />
        </RelativeLayout>
    </LinearLayout>

</merge>