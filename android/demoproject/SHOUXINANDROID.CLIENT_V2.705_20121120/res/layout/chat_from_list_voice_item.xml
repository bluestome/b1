<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12.0dip"
    android:id="@+id/chat_from_list_voice_item" >

    <TextView
        android:id="@+id/chat_time"
        style="@style/chat_from_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="6dip"
        android:layout_marginTop="6dip"
        android:background="@drawable/chat_list_time_bg"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingBottom="3.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip" >

        <ImageView
            android:id="@+id/chat_from_head"
            style="@style/chat_from_head" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/chat_content"
                style="@style/chat_text"
                android:background="@drawable/chatfrom_bg" />

            <ImageView
                android:id="@+id/chat_voice_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="20dip"
                android:background="@drawable/chat_from_voice_play" />
            
        </FrameLayout>

        <TextView
            android:id="@+id/chat_voice_length"
            style="@style/chat_text"
            android:layout_marginLeft="10.0dip" />
        <ImageView android:id="@+id/chat_send_status"
	        android:layout_width="15dip"
	        android:layout_height="15dip"
	        android:layout_gravity="bottom"
	        android:layout_marginRight="3dip"
	        android:layout_marginBottom="3dip"
	        android:visibility="gone"
	    />    
    </LinearLayout>

</LinearLayout>