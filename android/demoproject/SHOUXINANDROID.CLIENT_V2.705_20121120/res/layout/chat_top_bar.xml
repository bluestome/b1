<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/chat_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/list_top_bar_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_top_bg" />

        <ImageButton
            android:id="@+id/chat_add_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/list_top_bar_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/top_bar_button_bg"
            android:src="@drawable/add_more_contacts_btn"
            android:visibility="gone" />
        
        <ImageButton
            android:id="@+id/chat_remove_blacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/list_top_bar_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/top_bar_button_bg"
            android:src="@drawable/contacts_detail_black_remove" 
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/chat_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/list_top_bar_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/top_bar_button_bg"
            android:src="@drawable/contacts_list_new_btn"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/chat_top_bar_name"
                style="@style/chat_top_bar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dip"
                android:layout_marginTop="1.0dip"
                android:gravity="center"
                android:padding="0.0dip"
                android:singleLine="true"
                android:maxWidth="200dip" 
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/chat_top_bar_phone"
                style="@style/chat_top_bar_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chat_top_bar_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1.0dip"
                android:layout_marginTop="0dip"
                android:gravity="center"
                android:padding="0dip"
                android:singleLine="true"
                android:maxWidth="200dip" 
                android:ellipsize="end" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/chat_voice_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/list_top_bar_bg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/menu_speaker_off"
            android:visibility="gone" />
    </RelativeLayout>

</merge>