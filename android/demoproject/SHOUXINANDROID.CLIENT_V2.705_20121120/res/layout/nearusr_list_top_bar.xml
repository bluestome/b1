<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
  <RelativeLayout
        android:id="@+id/nearusr_list_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" >
        <ImageView
            android:id="@+id/nearusr_list_top_bar_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_top_bg" />
        <!-- 标题 -->
        <TextView
            android:id="@+id/nearusr_list_title"
            style="@style/list_title"
            android:text="@string/nearuser_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true" />
		<ImageView
            android:id="@+id/nearusr_select_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="3dip"
            android:layout_toRightOf="@id/nearusr_list_title"
            android:background="@drawable/nearusr_select_down" />
    </RelativeLayout>

</merge>