<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity ="center_vertical"
	android:padding="3.0dip"
	android:background="@drawable/message_list_item_bg"	>
	<RelativeLayout 
		android:layout_width="53dip"
		android:layout_height="53dip">
    	<ImageView android:id="@+id/friend_list_item_head"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:scaleType="centerCrop"
        	android:adjustViewBounds = "true"
        	android:layout_margin="4.0dip"/> 
     </RelativeLayout> 
     
	
    <RelativeLayout 
    android:layout_width="0dip"
	android:layout_height="wrap_content" 
	android:layout_weight="1.0"
	android:gravity="left" 
	android:paddingLeft="3.0dip" 
    >
    	<TextView android:id="@+id/friend_list_item_nickname"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	style="@style/msg_nickname"
    	android:ellipsize="end"
    	android:maxWidth="140.0dip"
    	android:singleLine="true"
    	android:gravity="center_vertical"
    	android:paddingTop="4.0dip"
    	android:paddingBottom="0.0dip"
    	/>
    	<TextView android:id="@+id/friend_list_item_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/msg_lastmsg"
        android:ellipsize="end"
        android:layout_below="@id/friend_list_item_nickname"
        android:singleLine="true"
        android:gravity="center_vertical"
    	android:paddingTop="0.0dip"
    	android:paddingBottom="4.0dip"/>
    </RelativeLayout>

</LinearLayout>