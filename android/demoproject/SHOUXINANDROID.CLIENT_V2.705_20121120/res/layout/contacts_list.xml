<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wallpaper" >

    <!-- 联系人列表 -->

    <android.skymobi.messenger.widget.PinnedHeaderListView
        android:id="@+id/contacts_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/contacts_multi_delete_buttons"
        android:layout_below="@+id/top_bar"
        android:cacheColorHint="#00000000"
        android:divider="@color/message_list_separate"
        android:dividerHeight="0dp"
        android:fadingEdgeLength="2px" >
    </android.skymobi.messenger.widget.PinnedHeaderListView>

    <RelativeLayout
        android:id="@+id/contacts_null_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar"
        android:layout_marginTop="40dip"
        android:visibility="gone" >

        <TextView
            style="@style/friend_null_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/friend_null_listview" />
    </RelativeLayout>

    <!-- Top Title -->

    <include layout="@layout/topbar" />

    <android.skymobi.messenger.widget.SideBar
        android:id="@+id/sideBar"
        android:layout_width="20dp"
        android:layout_height="fill_parent"
        android:layout_above="@+id/contacts_multi_delete_buttons"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/top_bar"
        android:layout_centerVertical="true" />

    <!-- 批量删除按钮 -->

    <LinearLayout
        android:id="@+id/contacts_multi_delete_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/maintab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:visibility="gone" >

        <Button
            android:id="@+id/contacts_multi_delete"
            style="@style/list_delete_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/contacts_edit_save_btn_bg"
            android:gravity="center"
            android:text="@string/contacts_detail_delete" />

        <Button
            android:id="@+id/contacts_multi_cancel"
            style="@style/list_delete_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/contacts_edit_save_btn_bg"
            android:gravity="center"
            android:text="@string/cancel" />
    </LinearLayout>
    
</RelativeLayout>