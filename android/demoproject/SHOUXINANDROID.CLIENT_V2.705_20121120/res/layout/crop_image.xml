<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wallpaper"
    android:orientation="vertical" >
    
    <!-- Top Title -->
    <include layout="@layout/top_bar" />
    
            
    <android.skymobi.messenger.widget.ZoomImageView
        android:id="@+id/imageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/black" >
    </android.skymobi.messenger.widget.ZoomImageView>
    
    <LinearLayout
        android:id="@+id/crop_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/maintab_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dip" >

        <Button
            android:id="@+id/crop_save"
            style="@style/list_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/contacts_edit_save_btn_bg"
            android:gravity="center"
            android:text="@string/save" />

        <Button
            android:id="@+id/crop_cancel"
            style="@style/list_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/contacts_edit_save_btn_bg"
            android:gravity="center"
            android:text="@string/crop_rechoose" />
    </LinearLayout>
</LinearLayout>