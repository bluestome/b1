<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <FrameLayout
            android:id="@+id/first_contacts_guide"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
            android:visibility="gone">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/first_contacts_guide" />
            <Button
                android:id="@+id/first_contacts_guide_btn"
                android:layout_width="150dip"
                android:layout_height="80dip"
                android:layout_gravity="right|bottom"
                android:background="@color/transparent" />
        </FrameLayout>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioGroup
                    android:id="@+id/main_tab_group"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/maintab_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/main_tab_message"
                        style="@style/main_tab_button"
                        android:drawableTop="@drawable/main_tab_message"
                        android:text="@string/main_tab_message" />

                    <RadioButton
                        android:id="@+id/main_tab_contact"
                        style="@style/main_tab_button"
                        android:drawableTop="@drawable/main_tab_contact"
                        android:text="@string/main_tab_contact" />

                    <RadioButton
                        android:id="@+id/main_tab_findfriend"
                        style="@style/main_tab_button"
                        android:drawableTop="@drawable/main_tab_findfriend"
                        android:text="@string/main_tab_findfriend" />

                    <RadioButton
                        android:id="@+id/main_tab_settings"
                        style="@style/main_tab_button"
                        android:drawableTop="@drawable/main_tab_settings"
                        android:text="@string/main_tab_settings" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >

                    <TextView
                        android:id="@+id/main_tab_msg_tip_count"
                        style="@style/msg_tip_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="22dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/tip_count_bg"
                        android:gravity="center"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >
                    <TextView
                        android:id="@+id/main_tab_fastchat_count"
                        style="@style/msg_tip_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="22dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/tip_count_bg"
                        android:gravity="center"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</TabHost>